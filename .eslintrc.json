{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "ignorePatterns": [
    "dist/*",
    "node_modules/*"
  ],
  "rules": {
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-multiple-empty-lines": "error",
    "semi": [
      2,
      "never"
    ]
  },
  "plugins": [
    "perfectionist",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:perfectionist/recommended-alphabetical",
    "plugin:perfectionist/recommended-natural"
  ]
}